{% set no = 1 %}
<div class="row ringkasan-row">
  <div class="col-lg-12">
    <table class="table tabel-donasi">
      <tr>
        <th>No</th>
        <th>Judul Campaign</th>
        <th>Nominal Donasi (Rp)</th>
        <th>Tanggal Donasi</th>
        <th>Status</th>
      </tr>
      {% for key, data in data %}
      <tr>
        <td>{{ key + 1 + (pagination.perpage * (pagination.current - 1 ))}}</td>
        <td class="donasi-link"><a href="{{ path_for('detail-campaign', {'id': data.id })}}">{{ data.title}}</a></td>
        <td class="text-right">{{ data.nominal}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
        <td class="text-right">{{ data.tanggal_donasi }}</td>
        <td>{% if data.status == 0 %}Dibatalkan {% else %}
            Berhasil{% endif %}</td>
      </tr>
      {% endfor %}
    </table>

      <center>
    <div class="col-lg-12" style="align: center; margin-left: 45%; margin-top: -15%">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                {% if pagination.current > 1 %}
                <li class="page-item"><a class="page-link"  title="Sebelumnya" href="{{ base_url()}}/user/donasi?page={{ pagination.current - 1 }}">«</a></li>
                {% endif %}
                <li class="page-item"><a class="page-link" href="#">{{ pagination.current }}</a></li>
                {% if pagination.current < pagination.total_page  %}
                <li class="page-item"><a class="page-link"  title="Berikutnya" href="{{ base_url()}}/user/donasi?page={{ pagination.current + 1 }}">»</a></li>
                {% endif %}
              </ul>
            </nav>
        </div>
      </center>
  </div>
</div>
{% endblock %}