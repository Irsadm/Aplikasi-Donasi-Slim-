{% extends 'admin/index.twig' %}
{% block main %}
{% include 'templates/partials/flash.twig' %}
  <h2 style="color:black; margin-top:-1%; margin-bottom:2%"><b>Verification Request </b> </h2>
{% set no = 1 %}
<div class="row ringkasan-row">
  <div class="col-lg-12">
    <table id="example" class="table table-striped table-bordered" >
      <tr>
        <th class="text-center">No</th>
        <th class="text-center">Title</th>
        <th class="text-center">Campaigner</th>
        <th class="text-center">Goal</th>
        <th class="text-center">Action</th>
      </tr>
      {% for key, data in data %}
      <tr>
        <td class="text-center">{{ key + 1 + (pagination.perpage * (pagination.current - 1 ))}}</td>
        <td class="text-left" style="text-transform:capitalize">{{ data.title}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
        <td class="text-left" style="text-transform:capitalize">{{ data.campaigner }}</td>
        <td class="text-right">{{ data.target_dana }}</td>
        <td class="text-center">
           <a href="{{ path_for('campaign.view', {'id': data.id})}}"><button class="btn-primary" style="border-radius:5px" data-toggle="modal" data-target="#modal2{{ data.id }}">Verify</button></a> 
           </td>
      </tr>
      

      {% endfor %}
     </table>
     <center>
         <div class="col-lg-12" style="">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                {% if pagination.current > 1 %}
                <li class="page-item"><a class="page-link"  title="Sebelumnya" href="{{ base_url()}}/secret/admin/campaigns/request?page={{ pagination.current - 1 }}">«</a></li>
                {% endif %}
                <li class="page-item"><a class="page-link" href="#">{{ pagination.current }}</a></li>
                {% if pagination.current < pagination.total_page  %}
                <li class="page-item"><a class="page-link"  title="Berikutnya" href="{{ base_url()}}/secret/admin/campaigns/request?page={{ pagination.current + 1 }}">»</a></li>
                {% endif %}
              </ul>
            </nav>
        </div> 
      </center>
  </div>
</div>

    

<script>
</script>
{% endblock %}